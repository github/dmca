#!/bin/bash
if [[ $TARGET_INSTALL_REMOTE == 1 ]]; then
	args=(ssh)

	if [[ ! -z "$THEOS_DEVICE_PORT" ]]; then
		args+=(-p "$THEOS_DEVICE_PORT")
	fi

	if [[ ! -z "$THEOS_DEVICE_USER" ]]; then
		args+=(-l "$THEOS_DEVICE_USER")
	fi

	args+=($THEOS_DEVICE_IP)
	args+=("$@")

	exec ${args[@]}
else
	exec su -c "$@"
fi
